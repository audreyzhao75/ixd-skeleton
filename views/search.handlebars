    <!-- top nav -->
    <div class="topBar fixed-top" >
		<div class="row">
			<div class="col">
				<a href="javascript:history.back()"><img src="images/backButton.png" class="topIcons"></a>
			</div>
			<div class="col-8">
				<h4>Search</h4>
			</div>
			<div class="col">
				<a href="help"><img src="images/infoButton.png" class="topIcons" id="infoButton"></a>
			</div>
		</div>
	</div>

	<div class="container">
        <form>
            <!--search event name-->
            <div class="form-group">
                <label class="sr-only" for="eventName">Event Name</label>
                    <input type="text" class="form-control" placeholder="Event name (optional)">
            </div>

            <!--location-->
            <div class="form-group row">
                <label for="location" class="col-sm-2 col-form-label">Location</label>
                <div class="col-sm-10">
            		<select class="selectpicker dropdown-menu-right form-control" id="location" title="Select...">
            	        <option>10 miles near</option> 
                	    <option>25 miles near</option>
                        <option>50 miles near</option>
                        <option>100 miles near</option>
                        <option>Anywhere</option>
                	</select>
                    <input type="text" class="form-control" placeholder="City, State, Zip Code">
                </div>
            </div>
            
            <!--event-->
            <div class="form-group row">
                <label for="event" class="col-sm-2 col-form-label">Event</label>
                <div class="col-sm-10">
                    <select class="selectpicker dropdown-menu-right form-control" multiple data-actions-box="true" id="event">
                        <option value="adoptions">Adoptions</option> 
                        <option value="meetups">Meetups</option> 
                        <option value="classes">Classes</option>
                        <option value="fundraising">Fundraising</option>
                        <option value="otherEvent">Other</option>
                    </select>
                </div>
            </div>

            <!--pet type-->
            <div class="form-group row">
                <label for="petType" class="col-sm-2 col-form-label">Pet Type</label>
                <div class="col-sm-10">
                    <select class="selectpicker dropdown-menu-right form-control" id="petType">
                        <option value="" hidden>None</option>
                        <option value="dogs">Dogs</option> 
                        <option value="cats">Cats</option> 
                        <option value="critters">Critters</option>
                        <option value="reptiles">Reptiles</option>
                        <option value="otherPet">Other</option>
                    </select>
                </div>
            </div>

            <!--dog breeds-->
            <div class="form-group row" id="dogBreedDiv">
                <label for="dogBreed" class="col-sm-2 col-form-label">Breed</label>
                <div class="col-sm-10">
                    <select class="selectpicker dropdown-menu-right form-control" multiple data-actions-box="true" data-live-search="true" id="dogBreed" title="Pick a breed" data-size="5">
                        {{#each dogs}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <!--cat breeds-->
            <div class="form-group row" id="catBreedDiv">
                <label for="catBreed" class="col-sm-2 col-form-label">Breed</label>
                <div class="col-sm-10">
                    <select class="selectpicker dropdown-menu-right form-control" multiple data-actions-box="true" data-live-search="true" id="catBreed" title="Pick a breed" data-size="5">
                        {{#each cats}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <!--submit-->
            <div class="form-group row">
                <div class="col-sm-10">
                    <a href="results" class="btn btn-secondary" role="button">Go!</a>
                </div>
            </div>
        </form>
    </div>

    <!--navigation/icons-->
    <div class="mynavbar">
