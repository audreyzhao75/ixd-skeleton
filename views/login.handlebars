<html>
<head>
	<title>Test Login</title>
	<!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link href="css/login.css" rel="stylesheet">
</head>
<body>
	<!-- top nav -->
	<div class="topBar fixed-top" >
		<div class="row">
			<div class="col">
				<!-- <a href="index.html"><img src="images/backButton.png" class="topIcons"></a> -->
			</div>
			<div class="col-8">
				<h4>Login</h4>
			</div>
			<div class="col">
				<a href="help"><img src="images/infoButton.png" class="topIcons" id="infoButton"></a>
			</div>
		</div>
	</div>
	 <form action="index" method="get">
    <div class="container">
        <img src="images/logo.png" alt="logo" class="pic-center">
    </div>
    
    <div id="facebook"  class="facebookLogin">
        <h2>Login with</h2><br>
            <fb:login-button class="fbBtn" scope="public_profile,email" size="XLarge" onlogin="checkLoginState();"></fb:login-button>
    </div>

    <div class="container">
        <h4 id="or">Or</h4>
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <button type="submit">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>
	
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script id="handlebars-demo" type="text/x-handlebars-template"></script>
    {{> facebook}}
	<script src="/js/facebook.js"></script>
</body>
</html>
